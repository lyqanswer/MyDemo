<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

 <LinearLayout
        android:id="@+id/jianjietop2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/jianjietop1"
        android:background="@drawable/wenzibeij" >

        <TextView
            android:id="@+id/tiancaijieshao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/beijing2"
            android:gravity="center"
            android:text="天才介绍"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tuanduijieshao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="团队介绍"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/jingyanglinian"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="经营理念"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp" />
    </LinearLayout>
    

</LinearLayout>